<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bimmr.classtracker.activites.DashboardActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#02000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/dashboard_classes"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Classes"
                    android:layout_height="0dp"
                    android:gravity = "center_vertical|start"
                    android:drawableRight="@drawable/ic_settings_black_24dp"
                    android:paddingRight="20dp"/>
                <Button
                    android:id="@+id/dashboard_schedule"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Schedule"
                    android:layout_height="0dp"
                    android:gravity = "center_vertical|start"
                    android:drawableRight="@drawable/ic_settings_black_24dp"
                    android:paddingRight="20dp" />
                <Button
                    android:id="@+id/dashboard_assignment"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Assignments"
                    android:layout_height="0dp"
                    android:gravity = "center_vertical|start"
                    android:drawableRight="@drawable/ic_settings_black_24dp"
                    android:paddingRight="20dp" />
                <Button
                    android:id="@+id/dashboard_tests"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Tests"
                    android:layout_height="0dp"
                    android:gravity = "center_vertical|start"
                    android:drawableRight="@drawable/ic_settings_black_24dp"
                    android:paddingRight="20dp" />
            </LinearLayout>


        </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ccc"
        app:menu="@menu/navigation" />
</LinearLayout>